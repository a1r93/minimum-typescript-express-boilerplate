    "@types/winston": "^2.3.7",
    "awesome-typescript-loader": "^3.4.1",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "json-loader": "^0.5.7",
    "nodemon": "^1.10.2",
    "tslint": "^5.9.1",
