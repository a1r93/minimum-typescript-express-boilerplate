{
  "name": "tiles-server",
  "version": "1.0.0",
  "description": "Minimalistic typescript nodejs boilerplate",
  "main": "src/app.ts",
  "repository": "https://github.com/a1r93/minimum-typescript-express-boilerplate.git",
  "author": "Arnaud Rochez",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "lint-ts && lint-js",
